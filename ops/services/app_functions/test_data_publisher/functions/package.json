{
  "name": "test-data-publisher",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "^20.0.0"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "clean": "rimraf build",
    "build:compile": "tsc",
    "build:production": "yarn && yarn coverage && yarn build && yarn install --production && yarn build:zip",
    "build:zip": "zip -r build/test-data-publisher.zip . -x \"*.zip\" -x \".terraform\" -x \"terraform.*\" -x \"*.tf\" -x \"local.settings.json\" -x \"*.map\"",
    "build": "yarn clean && yarn build:compile",
    "prebuild:zip": "mkdir -m700 -p build",
    "lint:write": "prettier --write . && eslint --fix .",
    "test": "jest --watch"
  },
  "main": "dist/**/index.js",
  "dependencies": {
    "@azure/functions": "^4.6.0",
    "@azure/storage-queue": "^12.24.0",
    "applicationinsights": "^3.7.0",
    "@aws-sdk/client-s3": "^3.500.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "**/*.js"
    ],
    "rules": {
      "import/no-unresolved": 0,
      "import/no-commonjs": 0,
      "import/no-named-as-default": 0,
      "no-unused-vars": "off"
    }
  }
}
